@model WebApp.Models.StudentViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section MyStyle
{
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
}

@*</head>
    <body>*@
<div>
    <h2>Student Information</h2>

    <form method="post">
        <table>
            <tr>
                <td>Roll No:</td>
                @*<td><input type="text" name="RollNo" value="@Model.RollNo" /></td>*@
                <td>@Html.TextBox("RollNo", Model.RollNo)</td>
                <td>@Html.ValidationMessageFor(c => c.RollNo)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(c => c.Name):</td>
                @*<td><input type="text" name="Name" value="@Model.Name" /></td>*@
                <td>@Html.TextBoxFor(c => c.Name, Model.Name)</td>
                <td></td>
            </tr>
            <tr>
                <td>Address:</td>
                <td><input type="text" name="Address" value="@Model.Address" /></td>
                <td></td>
            </tr>
            <tr>
                <td>Age:</td>
                <td><input type="text" name="Age" value="@Model.Age" /></td>
                <td></td>
            </tr>
            <tr>
                <td>Department:</td>
                @*<td><input type="text" name="DepartmentId" value="@Model.DepartmentId" /></td>*@
                <td>@Html.DropDownListFor(c => c.DepartmentId, Model.DepartmentSelectListItems)</td>
                <td></td>
            </tr>
            <tr>
                <td>Name:</td>
                <td><input type="submit" value="Update" /></td>
                <td>
                    @if (ViewBag.Message != null)
                    {
                        <h2>@ViewBag.Message</h2>
                    }
                </td>
            </tr>
        </table>
    </form>

    @{
        Html.RenderPartial("~/Views/Shared/student/_StudentDetails.cshtml", Model);
    }

</div>
@section MyScripts
{
    @*<script src="~/Scripts/jquery-1.8.0.min.js"></script>*@
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

@*</body>
    </html>*@


